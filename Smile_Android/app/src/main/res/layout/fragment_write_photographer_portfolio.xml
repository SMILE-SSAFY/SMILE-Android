<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.view.mypage.PhotographerWritePortFolioFragment">
    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/layout_common_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/layout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_photographer_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_gravity="center_horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_photographer_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:cardCornerRadius="50dp"
                    android:shape="ring">
                    <ImageView
                        android:id="@+id/image_photographer_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_profile_default"
                        android:background="@drawable/img_profile_default"/>
                </androidx.cardview.widget.CardView>
                <ImageButton
                    android:id="@+id/btn_photographer_profile_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:src="@drawable/ic_camera"
                    android:background="@drawable/oval_blue400_radius_4"
                    android:elevation="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/cv_photographer_profile"
                    app:layout_constraintEnd_toEndOf="@+id/cv_photographer_profile" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:id="@+id/layout_photographer_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_photographer_info"
                    style="@style/TvH5"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작가 소개"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="3dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_photographer_info"
                    style="@style/Et4DirOutlined.TextInputLayout"
                    app:counterEnabled="true"
                    app:counterMaxLength="100"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_photographer_info"
                        style="@style/Et4DirOutlined.TextInputEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_photographer_introduce"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:imeOptions="actionDone"
                        android:lines="4"
                        android:maxLines="8" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <include
                android:id="@+id/layout_photographer_category"
                layout="@layout/layout_photographer_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <include
                android:id="@+id/layout_photographer_place"
                layout="@layout/layout_photographer_place"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <include
                android:id="@+id/layout_photographer_account"
                layout="@layout/item_photographer_account"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_upload"
                style="@style/BtnLargeRectangleBlue400Radius8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="30dp"
                android:text="등록하기"
                android:textSize="18sp"
                android:textColor="@color/white" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>