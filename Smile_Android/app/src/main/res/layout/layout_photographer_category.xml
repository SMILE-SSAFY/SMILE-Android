<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_photographer_category"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_photographer_category"
        style="@style/TvH5"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카테고리&amp;가격 설정"
        android:layout_marginHorizontal="3dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_photographer_category"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:nestedScrollingEnabled="false"
        android:background="@color/transparent"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_photographer_category"
        android:visibility="visible"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add"
        style="@style/BtnLargeRectangleBlue100Radius8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:text="추가하기"
        android:textSize="18sp"
        android:textColor="@color/black" />
</LinearLayout>