<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:padding="20dp"
    android:focusableInTouchMode="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/cl_place"
        android:id="@+id/cl_picture"
        android:layout_marginTop="14dp">
        <TextView
            android:id="@+id/tv_picture_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_picture_explain"
            style="@style/TvH4"
            android:text="사진" />
        <TextView
            android:id="@+id/tv_picture_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_picture_title"
            android:layout_marginTop="5dp"
            style="@style/TvT5"
            android:text="사진은 최대 3장까지 선택 가능합니다." />
        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ll_picture_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_picture_explain"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_picture_content"
                android:layout_width="wrap_content"
                android:layout_marginRight="5dp"
                android:overScrollMode="never"
                android:nestedScrollingEnabled="false"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_rv_image"
                android:visibility="visible"/>
            <ImageButton
                android:id="@+id/btn_picture_content"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_plus"
                android:background="@drawable/rectangle_blue400_stroke_dotted_radius_8"/>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl_picture"
        android:id="@+id/cl_place">
        <TextView
            android:id="@+id/tv_place_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TvH4"
            android:text="장소" />
        <TextView
            android:id="@+id/tv_place_explain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_place_title"
            android:layout_marginTop="5dp"
            style="@style/TvT5"
            android:text="사진을 촬영한 장소의 주소를 입력해주세요." />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tv_place_explain"
            app:layout_constraintBottom_toBottomOf="parent">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_place_content"
                style="@style/Et4DirOutlined.TextInputLayout"
                android:layout_marginRight="6dp"
                android:enabled="false"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_place_content"
                    style="@style/Et4DirOutlined.TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>
            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_location"
                android:textSize="11sp"
                android:fontFamily="@font/ibm_plex_sans_semi_bold"
                style="@style/BtnLargeRectangleBlue400Radius8" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/cl_place"
        android:id="@+id/cl_category">
        <TextView
            android:id="@+id/tv_category_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TvH4"
            android:text="촬영 카테고리" />
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_category_content"
            style="@style/CustomSpinnerTheme"
            app:layout_constraintTop_toBottomOf="@id/tv_category_title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:hintEnabled="false"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:id="@+id/tv_category_content"
                android:hint="카테고리 선택"
                android:textColorHint="@color/gray500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none">
            </AutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_upload"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="100dp"
        android:text="업로드"
        android:fontFamily="@font/ibm_plex_sans_semi_bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        style="@style/BtnLargeRectangleGray400Radius8" />

</androidx.constraintlayout.widget.ConstraintLayout>