<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_empty_view"
    android:visibility="visible"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/cl_emptyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">
        <ImageView
            android:id="@+id/img_empty_view"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:gravity="end"
            android:src="@drawable/ic_not_found"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/img_empty_view"
            app:layout_constraintRight_toRightOf="@id/img_empty_view"
            app:layout_constraintTop_toBottomOf="@id/img_empty_view">

            <TextView
                android:id="@+id/tv_empty_view"
                style="@style/TvT2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:text=""
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>