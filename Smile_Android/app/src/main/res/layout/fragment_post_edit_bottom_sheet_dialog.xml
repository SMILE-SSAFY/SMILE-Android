<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/iv_view"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ll_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_bottomsheet_bar"/>
    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_view"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="15dp"
            android:text="게시물 편집"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:fontFamily="@font/ibm_plex_sans_semi_bold"/>
        <LinearLayout
            android:id="@+id/layout_modify_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingVertical="15dp"
            android:paddingHorizontal="35dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_gallery"/>
            <TextView
                android:id="@+id/tv_select_image_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게시물 수정"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/ibm_plex_sans_medium"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_remove_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:paddingVertical="15dp"
            android:paddingHorizontal="35dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_delete_empty"/>
            <TextView
                android:id="@+id/tv_remove_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게시물 삭제"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:fontFamily="@font/ibm_plex_sans_medium"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
