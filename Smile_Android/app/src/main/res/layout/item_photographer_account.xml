<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_photographer_account"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        style="@style/TvH5"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정산금 입금 계좌 설정"
        android:layout_marginHorizontal="3dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_photographer_account"
            android:layout_marginRight="10dp"
            style="@style/CustomSpinnerTheme"
            app:hintEnabled="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <AutoCompleteTextView
                android:id="@+id/tv_photographer_account"
                android:hint="은행명"
                android:maxLines="1"
                android:textColorHint="@color/gray500"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none">
            </AutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>
        <EditText
            android:id="@+id/et_photographer_account"
            style="@style/Et1DirOutlined"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:hint="계좌번호를 입력해주세요"
            android:inputType="number"/>
    </LinearLayout>
</LinearLayout>