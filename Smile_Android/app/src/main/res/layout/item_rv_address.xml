<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item_address"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@color/white"
    android:padding="25dp"
    android:layout_marginBottom="2dp"
    android:focusable="true">
    <ImageView
        android:id="@+id/iv_address_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pin_dark"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:id="@+id/layout_address_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        app:layout_constraintTop_toTopOf="@id/iv_address_pin"
        app:layout_constraintBottom_toBottomOf="@id/iv_address_pin"
        app:layout_constraintLeft_toRightOf="@id/iv_address_pin"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_address_comment"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="현재 주소"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:fontFamily="@font/ibm_plex_sans_regular"
            android:background="@color/blue300"
            android:layout_marginBottom="5dp"
            android:maxLines="1"
            android:padding="4dp"/>
        <TextView
            android:id="@+id/tv_address_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="주소 값입니다."
            android:textColor="@color/black_87"
            android:textSize="14sp"
            android:fontFamily="@font/ibm_plex_sans_regular"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:barrierDirection="left"
        app:barrierMargin="-10dp"
        app:constraint_referenced_ids="btn_address_item_delete"/>
    <ImageView
        android:id="@+id/btn_address_item_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@drawable/ic_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout_address_text"
        app:layout_constraintBottom_toBottomOf="@+id/layout_address_text"/>
    <ImageView
        android:id="@+id/btn_address_item_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:padding="8dp"
        android:scaleX="1.2"
        android:scaleY="1.2"
        android:src="@drawable/ic_check"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/layout_address_text"
        app:layout_constraintBottom_toBottomOf="@+id/layout_address_text"
        app:tint="@color/blue400" />
</androidx.constraintlayout.widget.ConstraintLayout>